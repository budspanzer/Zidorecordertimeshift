<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="585dip"
                android:layout_height="wrap_content"
                android:background="@drawable/remane_input_back"
                android:orientation="vertical" >

                <com.zidoo.recorder.view.ZidooTextView
                    android:id="@+id/delete_dialog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:layout_marginTop="25dip"
                    android:textColor="#444444"
                    android:textSize="25sp" />

                <com.zidoo.recorder.view.ZidooTextView
                    android:id="@+id/delete_dialog_msg"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dip"
                    android:layout_marginRight="38dip"
                    android:layout_marginTop="35dip"
                    android:lines="2"
                    android:textColor="#444444"
                    android:textSize="28sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                      android:layout_marginBottom="30dip"
                    android:orientation="horizontal" >

                    <com.zidoo.recorder.view.ZidooButton
                        android:id="@+id/remane_input_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lock_btn_c"
                        android:gravity="center"
                        android:text="@string/btn_ok"
                        android:textColor="@drawable/lock_text_systle"
                        android:textSize="20sp" />

                    <com.zidoo.recorder.view.ZidooButton
                        android:id="@+id/remane_input_set"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/lock_btn_c"
                        android:gravity="center"
                        android:text="@string/btn_canle"
                        android:visibility="gone"
                        android:textColor="@drawable/lock_text_systle"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>